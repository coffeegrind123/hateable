# pnpm configuration for Open Hateable production builds

# Allow build scripts for all dependencies (required for production builds)
ignore-scripts=false

# Explicitly allow build scripts for essential packages
enable-pre-post-scripts=true

# Performance optimizations
auto-install-peers=true
strict-peer-dependencies=false
prefer-frozen-lockfile=true
package-import-method=copy
side-effects-cache=true
side-effects-cache-readonly=false

# Registry configuration
registry=https://registry.npmjs.org/

# Node.js options for builds
node-options=--max-old-space-size=4096