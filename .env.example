# Open Lovable Environment Configuration
# Copy this file to .env.local and configure your values

# Custom LLM Endpoint Configuration (configured in the web interface)
# These are just examples - you'll configure the actual endpoint in the UI
# CUSTOM_LLM_ENDPOINT=http://localhost:8081/v1
# CUSTOM_LLM_API_KEY=your-api-key
# CUSTOM_LLM_MODEL=gpt-3.5-turbo

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Firecrawl Simple Configuration
FIRECRAWL_API_URL=http://localhost:3002

# Firecrawl Simple Environment Variables (optional)
# Proxy configuration for bypassing anti-bot detection
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=

# Media blocking to improve performance
BLOCK_MEDIA=true

# Browser concurrency settings
MAX_CONCURRENCY=10

# 2Captcha token for CAPTCHA solving
TWOCAPTCHA_TOKEN=

# Worker and performance settings
NUM_WORKERS_PER_QUEUE=8
BULL_AUTH_KEY=changeme-secure-key
TEST_API_KEY=test-key
LOGGING_LEVEL=info
MAX_RAM=0.95
MAX_CPU=0.95

# ScrapingBee API (optional fallback)
SCRAPING_BEE_API_KEY=

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# Optional: Enable debug logging
DEBUG=false